<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment1"
    tools:layout_editor_absoluteY="25dp">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textTest"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="15dp"
        android:text="Enter Information to Begin Your Reservation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/submitDates" />

    <Button
        android:id="@+id/submitDates"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginBottom="24dp"
        android:text="Submit Dates"
        app:layout_constraintBottom_toTopOf="@+id/textTest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="232dp"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="3dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/submitDates"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="101dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:text="Adult Guests:"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="373dp" />

            <TextView
                android:id="@+id/adultsToText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                tools:layout_editor_absoluteX="225dp"
                tools:layout_editor_absoluteY="33dp" />

            <Button
                android:id="@+id/addAdult"
                android:layout_width="33dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:text="+"
                tools:layout_editor_absoluteX="257dp"
                tools:layout_editor_absoluteY="33dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="94dp"
                android:layout_height="22dp"
                android:layout_weight="1"
                android:text="Child Guests:"
                tools:layout_editor_absoluteX="24dp"
                tools:layout_editor_absoluteY="118dp" />

            <TextView
                android:id="@+id/childrenToText"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                tools:layout_editor_absoluteX="208dp"
                tools:layout_editor_absoluteY="118dp" />

            <Button
                android:id="@+id/addChild"
                android:layout_width="53dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="+"
                tools:layout_editor_absoluteX="240dp"
                tools:layout_editor_absoluteY="118dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="123dp"
                android:layout_height="23dp"
                android:layout_weight="1"
                android:text="Number of Rooms:"
                tools:layout_editor_absoluteX="24dp"
                tools:layout_editor_absoluteY="195dp" />

            <TextView
                android:id="@+id/roomsToText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                tools:layout_editor_absoluteX="215dp"
                tools:layout_editor_absoluteY="197dp" />

            <Button
                android:id="@+id/addRoom"
                android:layout_width="45dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:text="+"
                tools:layout_editor_absoluteX="247dp"
                tools:layout_editor_absoluteY="197dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="205dp"
                tools:layout_editor_absoluteY="185dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textEditIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Check-in Date" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="205dp"
                tools:layout_editor_absoluteY="250dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textEditOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Check-out Date" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>